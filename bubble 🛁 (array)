#include<stdio.h>
int main()
{
	int a[10];
	int x, y, z;
	printf("intput 10 numbers:");
	for (x = 0; x < 10; x++)
	{
		scanf("%d", &a[x]);
	}
	printf("\n");
	for (y = 0; y < 9; y++)//9次循环就进行9次躺比较
	{
		for (x = 0; x < 9 - y; x++)//每趟比较中相邻的数进行比较，每一趟就要进行9-y次比较
		{
			if (a[x] > a[x + 1])
			{
				z = a[x];
				a[x] = a[x + 1];
				a[x + 1] = z;
			}
		}
	}
	printf("the sorted numbers:");
	for (x = 0; x < 10; x++) printf("%d ", a[x]);
	printf("\n");
	return 0;
}//bubble
