#include<stdio.h>
int main()
{
	int a[5], i, sum = 0;
	for (i = 0; i <= 4; i++)
	{
		printf("请输入第%d个数：", i + 1);
		scanf("%d", &a[i]);
		if (i % 2 == 0)
			sum += a[i];
	}
	printf("此数组为：\n");
	for (i = 0; i <= 4; i++)
		printf("%3d", a[i]);
	printf("\n下表为偶数的元素之和为%d\n", sum);
	return 0;
}
/*请输入第1个数：3
请输入第2个数：1
请输入第3个数：2
请输入第4个数：5
请输入第5个数：4
此数组为：
3  1  2  5  4
下表为偶数的元素之和为9*/
