#include<stdio.h>
int main()
{
	int profit, bouns;
	printf("input profit:");
	scanf("%d", &profit);
	if (profit <= 100000) //利润低于或等于十万元时，奖金可提10%
	{
		bouns = profit * 0.1;
	}
	else
	{//高于十万低于二十万时，低于十万10%提成，高于十万可提成7.5%
		if (profit <= 200000)
			bouns = 100000 * 0.1 + (profit - 100000) * 0.075;
		else
		{//20万到40万之间时，高于20万的部分，可提成5%
			if (profit <= 400000)
				bouns = 100000 * 0.1 + 100000 * 0.075 + (profit - 200000) * 0.05;
			else
			{//40万到60万之间高于40万的部分，可提成3%
				if (profit <= 600000)
					bouns = 100000 * 0.1 + 100000 * 0.075 + 200000 * 0.05 + (profit - 400000) * 0.03;
				else
				{//60万到100万之间时，高于60万元的大部分，可提成1.5%
					if (profit <= 1000000)
						bouns = 100000 * 0.1 + 100000 * 0.075 + 200000 * 0.05 + 200000 * 0.03 + (profit - 600000) * 0.015;
					else
					{//高于100万元时，超过100万元的部分按1%提成
						if (profit > 1000000)
							bouns = 100000 * 0.1 + 100000 * 0.075 + 200000 * 0.05 + 200000 * 0.03 + 400000 * 0.015 + (profit - 1000000) * 0.01;
					}
				}
			}
		}
	}
	printf("bouns:%d\n", bouns);
	return 0;
}
